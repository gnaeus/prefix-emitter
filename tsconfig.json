{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noLib": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "noImplicitAny" : true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
